# API конфигурация
API__TITLE=Food Assistant API
API__DESCRIPTION=Smart recipe selection based on ingredients
API__VERSION=1.0.0

# URL для фронтенда (например, Streamlit)
API_URL=http://localhost:8000/api

# Настройки базы данных PostgreSQL
DATABASE__POSTGRES_HOST=localhost
DATABASE__POSTGRES_PORT=5432
DATABASE__POSTGRES_USER=your_postgres_user
DATABASE__POSTGRES_PASSWORD=your_postgres_password
DATABASE__POSTGRES_DB=your_database_name

# JWT секретный ключ (изменить перед деплоем!)
SECURITY__JWT_SECRET_KEY=your_jwt_secret_key

# Разрешённые источники CORS (через запятую, без пробелов)
CORS__ORIGINS=["http://localhost", "http://localhost:3000"]
